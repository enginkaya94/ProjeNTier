@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Ürünler";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            @Html.ActionLink("Ürün Ekle", "AddProduct", "Product", null, new { @class = "btn btn-info float-right" })
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Görsel</th>
                        <th>Ürün Adı</th>
                        <th>Ürün Fiyat</th>
                        <th>Stok Adet</th>
                        <th>Kategori</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product product in Model)
                    {
                        <tr>    
                            <td>@product.ImagePath</td>
                            <td>@product.ProductName</td>
                            <td>@product.UnitPrice</td>
                            <td>@product.UnitsInStock</td>
                            <td>@product.SubCategory</td>
                        </tr>
                        <a href="#" class="badge bg-warning">Güncelle</a>
                        <a href="#" class="badge bg-danger">Sil</a>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
