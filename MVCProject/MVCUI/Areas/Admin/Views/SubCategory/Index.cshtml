@model List<SubCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    TempData["Title"] = "Alt Kategoriler";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            @Html.ActionLink("AltKategori Ekle", "AddSubCategory", "SubCategory", null, new { @class = "btn btn-info float-right" })
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Alt Kategori Adı</th>
                        <th>Açıklama</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (SubCategory category in Model)
                    {
                        <tr>
                            <td>@category.SubCategoryName</td>
                            <td>@category.Description</td>
                            <td>
                                @Html.ActionLink("Güncelle", "UpdateSubCategory", new { id = category.ID }, new { @class = "badge bg-warning" })
                                @Html.ActionLink("Sil", "DeleteSubCategory", new { id = category.ID }, new { @class = "badge bg-danger" })
                            </td>
                        </tr>
                    }



                </tbody>
            </table>
        </div>
    </div>
</div>

