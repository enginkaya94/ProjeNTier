@model AppUser
@{
    ViewBag.Title = "UpdateAppUser";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Kullanıcı Bilgileri</h3>
        </div>
        <!-- /.card-header -->
        <!-- form start -->
        <form role="form" method="post">
            @Html.HiddenFor(x => x.ID)
            <div class="card-body">
                <div class="form-group">
                    <label>Profil Fotoğraf</label>
                    <div class="form-group">
                        <input type="file" name="imagePath" />
                    </div>
                </div>
                <div class="form-group">
                    <label>Kullanıcı Adı</label>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "kullanıcı adi" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Adı</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "ad" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Soyadı</label>
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "soyad" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "e-mail" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Doğum Tarihi</label>
                    @Html.TextBoxFor(x => x.BirthDate, new { @class = "form-control" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Adres</label>
                    @Html.TextBoxFor(x => x.Address, new { @class = "form-control", placeholder = "adres" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Telefon</label>
                    @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control", placeholder = "telefon" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
                <div class="form-group">
                    <label>Cinsiyet</label>
                    @Html.TextBoxFor(x => x.Gender, new { @class = "form-control", placeholder = "Cinsiyet" })
                    @*<input type="text" class="form-control" placeholder="Açıklama" name="Description">*@
                </div>
            </div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>



